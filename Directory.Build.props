<Project>
  <PropertyGroup>
    <NetVersion>net9.0</NetVersion>
    <AndroidPlatform>android</AndroidPlatform>
    <IosPlatform>ios</IosPlatform>
    <AndroidTargetFramework>$(NetVersion)-$(AndroidPlatform)</AndroidTargetFramework>
    <IosTargetFramework>$(NetVersion)-$(IosPlatform)</IosTargetFramework>
    <SupportedTargetFrameworks>$(NetVersion);$(AndroidTargetFramework);$(IosTargetFramework)</SupportedTargetFrameworks>

    <IsTargetPlatformAndroid>false</IsTargetPlatformAndroid>
    <IsTargetPlatformAndroid Condition="'$(TargetFramework)' == '$(AndroidTargetFramework)'">true</IsTargetPlatformAndroid>
    <IsTargetPlatformIos>false</IsTargetPlatformIos>
    <IsTargetPlatformIos Condition="'$(TargetFramework)' == '$(IosTargetFramework)'">true</IsTargetPlatformIos>

    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>

    <AnalysisLevel>latest-recommended</AnalysisLevel>
    <CodeAnalysisTreatWarningsAsErrors>true</CodeAnalysisTreatWarningsAsErrors>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>
</Project>