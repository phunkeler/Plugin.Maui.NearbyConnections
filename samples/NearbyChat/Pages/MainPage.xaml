<?xml version="1.0" encoding="utf-8" ?>
<BasePage
    x:Class="NearbyChat.Pages.MainPage"
    x:Name="this"
    x:TypeArguments="MainPageViewModel"
    Background="{AppThemeBinding Light={StaticResource LightBackgroundGradient}, Dark={StaticResource DarkBackgroundGradient}}"
    x:DataType="MainPageViewModel">

    <BasePage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="Center"
                         Margin="{StaticResource SpacingXL}"
                         Spacing="{StaticResource SpacingLG}">
                <Label Text="NearbyChat"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
                <Label Text="Choose your connection mode"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"/>

                <!-- Advertise -->
                <NavigationCard
                    Icon="{StaticResource icon-antenna}"
                    IconStyle="{StaticResource AdvertiseIconContainer}"
                    Title="Advertising"
                    Subtitle="Be discoverable"
                    Command="{Binding NavigateToAdvertisingCommand}"/>

                <!-- Discover -->
                <NavigationCard
                    Icon="{StaticResource icon-sonar}"
                    IconStyle="{StaticResource DiscoverIconContainer}"
                    Title="Discovery"
                    Subtitle="Find nearby devices"
                    Command="{Binding NavigateToDiscoveryCommand}"/>

                <!-- Connections -->
                <NavigationCard
                    Icon="{StaticResource icon-message}"
                    IconStyle="{StaticResource ConnectionsIconContainer}"
                    Title="Connections"
                    Subtitle="No connections"
                    Command="{Binding NavigateToConnectionsCommand}"/>

            </StackLayout>
        </ScrollView>
    </BasePage.Content>
</BasePage>