<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="NearbyChat.Resources.Themes.DarkTheme">

    <!-- Primary Colors (Dark Theme Variants) -->
    <Color x:Key="PrimaryBlue500">#60a5fa</Color>
    <Color x:Key="PrimaryBlue600">#3b82f6</Color>
    <Color x:Key="PrimaryBlue700">#2563eb</Color>

    <Color x:Key="Purple500">#a78bfa</Color>
    <Color x:Key="Purple600">#8b5cf6</Color>
    <Color x:Key="Purple700">#7c3aed</Color>

    <!-- Accent Colors (Dark Theme Variants) -->
    <Color x:Key="Green500">#34d399</Color>
    <Color x:Key="Orange500">#fbbf24</Color>
    <Color x:Key="Pink500">#f472b6</Color>
    <Color x:Key="Cyan500">#22d3ee</Color>

    <!-- Gray Scale (Inverted Hierarchy) -->
    <Color x:Key="Gray50">#0f172a</Color>
    <Color x:Key="Gray100">#1e293b</Color>
    <Color x:Key="Gray200">#334155</Color>
    <Color x:Key="Gray500">#94a3b8</Color>
    <Color x:Key="Gray700">#cbd5e1</Color>
    <Color x:Key="Gray900">#f1f5f9</Color>

    <!-- Background Gradients (Dark Theme) -->
    <LinearGradientBrush x:Key="AppBackgroundGradient"
                         StartPoint="0,0"
                         EndPoint="1,1">
        <GradientStop Color="{StaticResource Gray50}"
                      Offset="0.0"/>
        <GradientStop Color="{StaticResource Gray100}"
                      Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryButtonGradient"
                         StartPoint="0,0"
                         EndPoint="1,0">
        <GradientStop Color="{StaticResource PrimaryBlue600}"
                      Offset="0.0"/>
        <GradientStop Color="{StaticResource Purple700}"
                      Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AppIconGradient"
                         StartPoint="0,0"
                         EndPoint="1,0">
        <GradientStop Color="{StaticResource PrimaryBlue600}"
                      Offset="0.0"/>
        <GradientStop Color="{StaticResource Purple600}"
                      Offset="1.0"/>
    </LinearGradientBrush>

</ResourceDictionary>