<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:controls="clr-namespace:NearbyChat.Controls"
    x:Class="NearbyChat.Resources.Styles.MainStyle">

    <!-- Layout Spacing -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">12</x:Double>
    <x:Double x:Key="SpacingLG">16</x:Double>
    <x:Double x:Key="SpacingXL">24</x:Double>
    <x:Double x:Key="Spacing2XL">32</x:Double>
    <x:Double x:Key="Spacing3XL">48</x:Double>

    <!-- Font sizes -->
    <x:Double x:Key="FontSizeSM">14</x:Double>
    <x:Double x:Key="FontSizeMD">16</x:Double>

    <!-- ========================================== -->
    <!--                   ICONS                    -->
    <!-- ========================================== -->
    <x:String x:Key="icon-antenna">&#xe001;</x:String>
    <x:String x:Key="icon-left">&#xe006;</x:String>
    <x:String x:Key="icon-message">&#xe009;</x:String>
    <x:String x:Key="icon-right">&#xe011;</x:String>
    <x:String x:Key="icon-sonar">&#xe013;</x:String>

    <!-- ========================================== -->
    <!--          FEATURE ICON BADGE PARTS          -->
    <!-- ========================================== -->

    <!-- Border styles (must be defined before FeatureIconBadge styles) -->
    <Style x:Key="FeatureIconBadgeBorderBaseStyle"
           TargetType="Border">
        <Setter Property="WidthRequest"
                Value="56"/>
        <Setter Property="HeightRequest"
                Value="56"/>
        <Setter Property="StrokeShape"
                Value="RoundRectangle 16"/>
    </Style>

    <Style x:Key="FeatureIconBadgeBorderAdvertiseStyle"
           TargetType="Border"
           BasedOn="{StaticResource FeatureIconBadgeBorderBaseStyle}">
        <Setter Property="BackgroundColor"
                Value="{StaticResource AccentAdvertising}"/>
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource LightAccentAdvertisingDark}, Dark={StaticResource DarkAccentAdvertisingLight}}"
                    Offset="0,4"
                    Radius="12"
                    Opacity="0.3"/>
        </Setter>
    </Style>

    <Style x:Key="FeatureIconBadgeBorderDiscoverStyle"
           TargetType="Border"
           BasedOn="{StaticResource FeatureIconBadgeBorderBaseStyle}">
        <Setter Property="BackgroundColor"
                Value="{StaticResource AccentDiscovery}"/>
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource LightAccentDiscoveryDark}, Dark={StaticResource DarkAccentDiscoveryLight}}"
                    Offset="0,4"
                    Radius="12"
                    Opacity="0.3"/>
        </Setter>
    </Style>

    <Style x:Key="FeatureIconBadgeBorderConnectionsStyle"
           TargetType="Border"
           BasedOn="{StaticResource FeatureIconBadgeBorderBaseStyle}">
        <Setter Property="BackgroundColor"
                Value="{StaticResource AccentConnections}"/>
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource LightAccentConnectionsDark}, Dark={StaticResource DarkAccentConnectionsLight}}"
                    Offset="0,4"
                    Radius="12"
                    Opacity="0.3"/>
        </Setter>
    </Style>

    <!-- Image styles (must be defined before FeatureIconBadge styles) -->
    <Style x:Key="FeatureIconBadgeImageBaseStyle"
           TargetType="Image">
        <Setter Property="WidthRequest"
                Value="24"/>
        <Setter Property="HeightRequest"
                Value="24"/>
    </Style>

    <Style x:Key="FeatureIconBadgeImageAdvertiseStyle"
           TargetType="Image"
           BasedOn="{StaticResource FeatureIconBadgeImageBaseStyle}">
        <Setter Property="Source">
            <Setter.Value>
                <FontImageSource FontFamily="NearbyChatIcons"
                                 Glyph="{StaticResource icon-antenna}"
                                 Color="{StaticResource White}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FeatureIconBadgeImageDiscoverStyle"
           TargetType="Image"
           BasedOn="{StaticResource FeatureIconBadgeImageBaseStyle}">
        <Setter Property="Source">
            <Setter.Value>
                <FontImageSource FontFamily="NearbyChatIcons"
                                 Glyph="{StaticResource icon-sonar}"
                                 Color="{StaticResource White}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FeatureIconBadgeImageConnectionsStyle"
           TargetType="Image"
           BasedOn="{StaticResource FeatureIconBadgeImageBaseStyle}">
        <Setter Property="Source">
            <Setter.Value>
                <FontImageSource FontFamily="NearbyChatIcons"
                                 Glyph="{StaticResource icon-message}"
                                 Color="{StaticResource White}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========================================== -->
    <!--        FEATURE ICON BADGE CONTROLS         -->
    <!-- ========================================== -->

    <Style x:Key="FeatureIconBadgeStyle"
           TargetType="controls:FeatureIconBadge">
        <Setter Property="BorderStyle"
                Value="{StaticResource FeatureIconBadgeBorderBaseStyle}"/>
        <Setter Property="ImageStyle"
                Value="{StaticResource FeatureIconBadgeImageBaseStyle}"/>
    </Style>

    <Style x:Key="FeatureIconBadgeAdvertiseStyle"
           TargetType="controls:FeatureIconBadge"
           BasedOn="{StaticResource FeatureIconBadgeStyle}">
        <Setter Property="BorderStyle"
                Value="{StaticResource FeatureIconBadgeBorderAdvertiseStyle}"/>
        <Setter Property="ImageStyle"
                Value="{StaticResource FeatureIconBadgeImageAdvertiseStyle}"/>
    </Style>

    <Style x:Key="FeatureIconBadgeDiscoverStyle"
           TargetType="controls:FeatureIconBadge"
           BasedOn="{StaticResource FeatureIconBadgeStyle}">
        <Setter Property="BorderStyle"
                Value="{StaticResource FeatureIconBadgeBorderDiscoverStyle}"/>
        <Setter Property="ImageStyle"
                Value="{StaticResource FeatureIconBadgeImageDiscoverStyle}"/>
    </Style>

    <Style x:Key="FeatureIconBadgeConnectionsStyle"
           TargetType="controls:FeatureIconBadge"
           BasedOn="{StaticResource FeatureIconBadgeStyle}">
        <Setter Property="BorderStyle"
                Value="{StaticResource FeatureIconBadgeBorderConnectionsStyle}"/>
        <Setter Property="ImageStyle"
                Value="{StaticResource FeatureIconBadgeImageConnectionsStyle}"/>
    </Style>

    <!-- ========================================== -->
    <!--                TEXT STYLES                 -->
    <!-- ========================================== -->
    <Style x:Key="CardTitle"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
        <Setter Property="FontSize"
                Value="16"/>
        <Setter Property="FontAttributes"
                Value="Bold"/>
    </Style>

    <Style x:Key="CardSubtitle"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"/>
        <Setter Property="FontSize"
                Value="12"/>
    </Style>

    <Style x:Key="ListHeader"
           TargetType="Label">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}"/>
        <Setter Property="FontSize"
                Value="16"/>
    </Style>

    <Style x:Key="FeatureNavigationCardBorderStyle"
           TargetType="Border">
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource LightSurfacePrimary}, Dark={StaticResource DarkSurfacePrimary}}"/>
        <Setter Property="Padding"
                Value="24"/>
        <Setter Property="StrokeThickness"
                Value="0"/>
        <Setter Property="StrokeShape"
                Value="RoundRectangle 24"/>
        <Setter Property="Shadow">
            <Shadow Brush="Black"
                    Offset="12,12"
                    Radius="24"
                    Opacity="0.4"/>
        </Setter>
    </Style>

    <!-- Advertising Icon Container -->
    <Style x:Key="AdvertiseIconContainer"
           TargetType="Border">
        <Setter Property="BackgroundColor"
                Value="{StaticResource AccentAdvertising}"/>
        <Setter Property="WidthRequest"
                Value="56"/>
        <Setter Property="HeightRequest"
                Value="56"/>
        <Setter Property="StrokeThickness"
                Value="0"/>
        <Setter Property="StrokeShape"
                Value="RoundRectangle 16"/>
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource LightAccentAdvertisingDark}, Dark={StaticResource DarkAccentAdvertisingLight}}"
                    Offset="0,4"
                    Radius="12"
                    Opacity="0.3"/>
        </Setter>
    </Style>

    <!-- Discover Icon Container -->
    <Style x:Key="DiscoverIconContainer"
           TargetType="Border">
        <Setter Property="BackgroundColor"
                Value="{StaticResource AccentDiscovery}"/>
        <Setter Property="WidthRequest"
                Value="56"/>
        <Setter Property="HeightRequest"
                Value="56"/>
        <Setter Property="StrokeThickness"
                Value="0"/>
        <Setter Property="StrokeShape"
                Value="RoundRectangle 16"/>
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource LightAccentDiscoveryDark}, Dark={StaticResource DarkAccentDiscoveryLight}}"
                    Offset="0,4"
                    Radius="12"
                    Opacity="0.3"/>
        </Setter>
    </Style>

    <!-- Connections Icon Container -->
    <Style x:Key="ConnectionsIconContainer"
           TargetType="Border">
        <Setter Property="BackgroundColor"
                Value="{StaticResource AccentConnections}"/>
        <Setter Property="WidthRequest"
                Value="56"/>
        <Setter Property="HeightRequest"
                Value="56"/>
        <Setter Property="StrokeThickness"
                Value="0"/>
        <Setter Property="StrokeShape"
                Value="RoundRectangle 16"/>
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource LightAccentConnectionsDark}, Dark={StaticResource DarkAccentConnectionsLight}}"
                    Offset="0,4"
                    Radius="12"
                    Opacity="0.3"/>
        </Setter>
    </Style>

    <Style x:Key="BackButtonStyle"
           TargetType="Button">
        <Setter Property="Text"
                Value="Back"/>
        <Setter Property="BackgroundColor"
                Value="Transparent"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}"/>
        <Setter Property="FontAttributes"
                Value="Bold"/>
        <Setter Property="CornerRadius"
                Value="12"/>
        <Setter Property="FontFamily"
                Value="NearbyChatIcons"/>
        <Setter Property="BorderColor"
                Value="{AppThemeBinding Light=Black, Dark=White}"/>
        <Setter Property="Shadow">
            <Shadow Brush="{AppThemeBinding Light={StaticResource DarkShadowDark}, Dark={StaticResource DarkShadowLight}}"
                    Offset="0,2"
                    Radius="4"
                    Opacity="0.2"/>
        </Setter>
    </Style>

</ResourceDictionary>
