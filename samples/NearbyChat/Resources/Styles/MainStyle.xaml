<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonts="clr-namespace:Fonts"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="NearbyChat.Resources.Styles.MainStyle">

    <Style TargetType="Page"
           ApplyToDerivedTypes="True">
        <Setter Property="Padding"
                Value="0"/>
        <Setter Property="BackgroundColor"
                Value="{DynamicResource surface-base}"/>
    </Style>

    <FontImageSource x:Key="IconLight"
                     Glyph="{x:Static fonts:FluentUi.weather_sunny_28_regular}"
                     FontFamily="{x:Static fonts:FluentUi.FontFamily}"
                     Color="{DynamicResource Gray700}"
                     Size="{DynamicResource SpacingXL}"/>
    <FontImageSource x:Key="IconDark"
                     Glyph="{x:Static fonts:FluentUi.weather_moon_28_regular}"
                     FontFamily="{x:Static fonts:FluentUi.FontFamily}"
                     Color="{DynamicResource Gray700}"
                     Size="{DynamicResource SpacingXL}"/>

    <!-- Typography Styles -->
    <Style x:Key="Display1"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="30"/>
        <Setter Property="FontAttributes"
                Value="Bold"/>
        <Setter Property="TextColor"
                Value="{DynamicResource Gray900}"/>
        <Setter Property="LineBreakMode"
                Value="WordWrap"/>
    </Style>

    <Style x:Key="Headline1"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="20"/>
        <Setter Property="FontAttributes"
                Value="Bold"/>
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray500}}"/>

    </Style>

    <Style x:Key="Body1"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="16"/>
        <Setter Property="TextColor"
                Value="{DynamicResource Gray700}"/>
        <Setter Property="LineBreakMode"
                Value="WordWrap"/>
    </Style>

    <Style x:Key="Body2"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="14"/>
        <Setter Property="TextColor"
                Value="{DynamicResource Gray700}"/>
    </Style>

    <Style x:Key="Caption"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="12"/>
        <Setter Property="TextColor"
                Value="#9ca3af"/>
    </Style>

    <Style x:Key="LabelMedium"
           TargetType="Label">
        <Setter Property="FontSize"
                Value="14"/>
        <Setter Property="FontAttributes"
                Value="Bold"/>
        <Setter Property="TextColor"
                Value="{DynamicResource Gray900}"/>
    </Style>

    <!-- Component Styles -->
    <Style x:Key="PrimaryButton"
           TargetType="Button">
        <Setter Property="Background"
                Value="{DynamicResource PrimaryButtonGradient}"/>
        <Setter Property="TextColor"
                Value="White"/>
        <Setter Property="FontSize"
                Value="16"/>
        <Setter Property="FontAttributes"
                Value="Bold"/>
        <Setter Property="CornerRadius"
                Value="8"/>
        <Setter Property="HeightRequest"
                Value="48"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="Black"
                        Opacity="0.1"
                        Radius="10"
                        Offset="0,4"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CardFrame"
           TargetType="Border">
        <Setter Property="Background"
                Value="{DynamicResource Gray100}"/>
        <Setter Property="Stroke"
                Value="Transparent"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="Black"
                        Opacity="0.1"
                        Radius="20"
                        Offset="0,10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="InputFrame"
           TargetType="Border">
        <Setter Property="BackgroundColor"
                Value="White"/>
        <Setter Property="StrokeThickness"
                Value="8"/>
        <Setter Property="Stroke"
                Value="{DynamicResource Gray200}"/>

        <Setter Property="Padding"
                Value="0"/>
    </Style>

    <Style x:Key="TextInput"
           TargetType="Entry">
        <Setter Property="FontSize"
                Value="16"/>
        <Setter Property="BackgroundColor"
                Value="Transparent"/>
        <Setter Property="TextColor"
                Value="{DynamicResource Gray900}"/>
        <Setter Property="PlaceholderColor"
                Value="{DynamicResource Gray500}"/>
        <Setter Property="HeightRequest"
                Value="48"/>
    </Style>

    <Style x:Key="AvatarList-Container"
           TargetType="ContentView">

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="Transparent"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="AvatarList-Selected"
           TargetType="toolkit:AvatarView">

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Selected">
                        <VisualState.Setters>
                            <Setter Property="BorderWidth"
                                    Value="3"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Layout Spacing -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">12</x:Double>
    <x:Double x:Key="SpacingLG">16</x:Double>
    <x:Double x:Key="SpacingXL">24</x:Double>
    <x:Double x:Key="Spacing2XL">32</x:Double>
    <x:Double x:Key="Spacing3XL">48</x:Double>

</ResourceDictionary>
