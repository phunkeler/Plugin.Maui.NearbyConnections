<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:NearbyChat.Controls"
             x:Class="NearbyChat.Controls.NavigationCard"
             x:Name="this"
             x:DataType="controls:NavigationCard">

    <!-- Inner Card Border with Dark Shadow and Content -->
    <Border x:Name="CardBorder"
            BindingContext="{x:Reference this}"
            Style="{StaticResource NavigationCard}">

        <!-- Main Content -->
        <Grid ColumnDefinitions="Auto,*,Auto"
              ColumnSpacing="{StaticResource SpacingLG}">
            <!-- Icon Container -->
            <Border Style="{Binding IconStyle}">
                <Image
                    WidthRequest="24"
                    HeightRequest="24">
                    <Image.Source>
                        <FontImageSource FontFamily="NearbyChatIcons"
                                         Glyph="{Binding Icon}"
                                         Color="{StaticResource White}"/>
                    </Image.Source>
                </Image>
            </Border>

            <!-- Text Content -->
            <VerticalStackLayout Grid.Column="1"
                                 VerticalOptions="Center"
                                 Spacing="4">
                <Label Text="{Binding Title}"
                       Style="{StaticResource CardTitle}"/>
                <Label Text="{Binding Subtitle}"
                       Style="{StaticResource CardSubtitle}"/>
            </VerticalStackLayout>

            <!-- Chevron -->
            <Image
                Grid.Column="2"
                WidthRequest="12"
                HeightRequest="12">
                <Image.Source>
                    <FontImageSource FontFamily="NearbyChatIcons"
                                     Glyph="{StaticResource icon-right}"
                                     Color="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}"/>
                </Image.Source>
            </Image>
        </Grid>
    </Border>

</ContentView>
